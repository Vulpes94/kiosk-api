{
  "name": "api",
  "version": "4.0.0",
  "description": "Kible-API System",
  "main": "src/app.ts",
  "scripts": {
    "start": "nodemon --exec ts-node src/app",
    "deploy:start": "tsc && cross-env NODE_ENV=production PORT=3050 pm2 start build/app.js -i 0",
    "deploy:update": "tsc && pm2 reload all --update-env",
    "deploy:stop": "pm2 kill"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.0",
    "pm2": "^4.5.6",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.1.3",
    "typeorm": "^0.2.37",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.2",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.10.1",
    "nodemon": "^2.0.7",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "nodemonConfig": {
    "ext": "js, json, ts"
  }
}
